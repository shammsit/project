<%- include('../partials/dashboard-header', { title: 'Admin Dashboard' }) %>

<main class="table-main">
    <div class="table-container">
        <!-- Responsive Grid Header -->
        <div class="data-grid-header">
            <div>Name</div>
            <div>Username</div>
            <div>Password</div>
            <div>Mobile Number</div>
            <div>Email ID</div>
            <div>Project Name</div>
            <div>Role</div>
            <div class="actions-header">Actions</div>
        </div>

        <!-- Grid Body -->
        <div id="data-grid-body" class="data-grid-body">
            <!-- Example Row 1 -->
            <div class="data-grid-row">
                <div data-label="Name" contenteditable="false">John Doe</div>
                <div data-label="Username" contenteditable="false">johndoe</div>
                <div data-label="Password" contenteditable="false">********</div>
                <div data-label="Mobile Number" contenteditable="false">123-456-7890</div>
                <div data-label="Email ID" contenteditable="false">john.doe@email.com</div>
                <div data-label="Project Name" contenteditable="false">Project Alpha</div>
                <div data-label="Role" contenteditable="false">Developer</div>
                <div class="actions-cell">
                    <button class="btn edit-btn">Edit</button>
                    <button class="btn approve-btn">Approve</button>
                    <button class="btn reject-btn">Delete</button>
                    <button class="btn contact-btn">Contact</button>
                </div>
            </div>
             <!-- Example Row 2 -->
            <div class="data-grid-row">
                <div data-label="Name" contenteditable="false">Jane Smith</div>
                <div data-label="Username" contenteditable="false">janesmith</div>
                <div data-label="Password" contenteditable="false">********</div>
                <div data-label="Mobile Number" contenteditable="false">987-654-3210</div>
                <div data-label="Email ID" contenteditable="false">jane.smith@email.com</div>
                <div data-label="Project Name" contenteditable="false">Project Beta</div>
                <div data-label="Role" contenteditable="false">Designer</div>
                <div class="actions-cell">
                    <button class="btn edit-btn">Edit</button>
                    <button class="btn approve-btn">Approve</button>
                    <button class="btn reject-btn">Delete</button>
                    <button class="btn contact-btn">Contact</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Table Controls -->
    <div class="table-controls">
        <button id="add-row-btn" class="btn add-btn">
            <i class="fas fa-plus"></i> Add New Row
        </button>
    </div>
</main>

